<div id="homepage">
  <div class="white-background">
  </div>
  <div class="landing-main-groups container">
    <% if @my_groups == [] %>
    <h3 class="mt-3">You don't have any group yet</h3>
      <div class="add-something">
        <%= link_to new_group_path do %>
          <p><i class="fas fa-plus"></i> Create your first group</p>
          <% end %>
      </div>
    <% else %>
      <div class="add-something">
      <%= link_to new_group_path do %>
        <p><i class="icon fas fa-plus"></i> Add a new group</p>
        <% end %>
      </div>
      <div class="group-layout">
        <% @my_groups.uniq.each do |group| %>
          <div class="card-group-index">

            <div class="top">
              <h3><%= group.name.capitalize %></h3>
              <img src="<%= group.creater.avatar %>" class="card-trip-user avatar-bordered" />
            </div>


            <div class="medium">
              <div class="group-member-layout">
                <% group.members.each do |user| %>
                  <div class="member_each">

                    <img src="<%= user.avatar %>" class="card-trip-user avatar-bordered" />
                    <p><%= user.email %></p>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="bottom">
              <% if group.creater_id == current_user.id %>
                <p class="group-links">
                  <%= link_to new_match_path(group_id: group.id), class: "icon" do %>
                    <i class="far fa-calendar-check"></i>
                  <% end %>

                  <%= link_to edit_group_path(group), class: "icon" do %>
                    <i class="fas fa-user-edit"></i>
                  <% end %>

                  <%= link_to group_path(group), method: :delete, data: { confirm: "Are you sure?" }, class: "icon" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </p>
              <% end %>
            </div>

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
