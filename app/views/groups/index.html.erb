<div class="container">
  <% if @my_groups == [] %>
    <h1>You don't have any group yet</h1>

    <p><%= link_to new_group_path do %>
      <i class="fas fa-plus"> Create your first group</i>
      <% end %>
    </p>

  <% else %>

    <h1>Here are all my groups :</h1>
    <br>
    <%= link_to new_group_path do %>
    <i class="fas fa-plus"> Add a new group</i>
    <% end %>

    <br>
    <div class="group-layout">

    <% @my_groups.uniq.each do |group| %>
      <ul>
        <li class="card-group-index">
          <p> <b>Name of the group : </b><%= group.name %></p>
          <p> <b>Admin : </b><%= group.creater.email %></p>
          <p> <b>Members : </b></p>
          <div class="group-member-layout">
            <% group.members.each do |user| %>
              <div class="member_each">
                <p><%= user.email %></p>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
            <% end %>
          </div>
          <% if group.creater_id == current_user.id %>
            <p class="group-links"><%= link_to "Create an event", new_match_path(group_id: group.id) %> - <%= link_to "Edit group", edit_group_path(group) %> - <%= link_to "Delete group", group_path(group), method: :delete, data: { confirm: "Are you sure?" } %></p>
          <% end %>
        </li>
    </ul>
    <% end %>
</div>
  <% end %>
</div>

