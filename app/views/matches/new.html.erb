
<div class="form">
   <%= simple_form_for [@match] do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :owner_id, value:current_user.id %>
    <%= f.input :title, label: 'Give a title to your event', placeholder: 'The title' %>
    <%= f.input :location, label: 'Address of the event', placeholder: 'The address' %>
    <%= f.input :description, label: 'Description of the event', placeholder: 'The description' %>
    <%= f.input :max_date, label: 'Pick a date before' %>
    <%= f.input :min_time, label: 'Time Slot of the event'%>
    <%= f.input :max_time, label: 'Time Slot of the event'%>


    <%= f.association :users, collection: User.all, as: :check_boxes, label_method: :email %>
    <%= f.button :submit, 'Create', class: "btn-primary" %>
  <% end %>
</div>


