<div id="wrapper" class="background-green-white">

  <div class="container">

    <div id='edit-user'>

      <div class="form">

        <%= simple_form_for current_user do |f| %>

          <div class="name-container input">

            <%= f.input :name, label: 'First name *', placeholder: 'Pierre', input_html: { class: 'first-name-input' }%>

            <div id="first-name-error-message" class="error-message">

              <p>Please enter your first name</p>

            </div>

          </div>

          <div class="last-name-container input">

            <%= f.input :last_name, label: 'Last Name *', placeholder: 'Dubois', input_html: { class: 'last-name-input' } %>

            <div id="last-name-error-message" class="error-message">

              <p>Please enter your last name</p>

            </div>

          </div>

          <div class="birthdate-container input">

            <%= f.input :birthdate, as: :date, html5: true, label: 'Birthdate', input_html: { class: 'birthdate-input' } %>

            <div id="birthdate-error-message" class="error-message">

              <p>Please enter a valid birthdate (ex: 10/12/1997)</p>

            </div>

          </div>

          <div class="phone-number-container input">

            <%= f.input :phone_number, label: 'Phone number', placeholder: '0476614221', input_html: { class: 'phone-number-input' } %>

            <div id="phone-number-error-message" class="error-message">

              <p>Please enter a valid phone number</p>

            </div>

          </div>

          <div class="country-container input">

            <%= f.input :country, priority: ["BE", "FR", "GB", "LU", "DE"], label: 'Country *', input_html: { class: 'country-input' } %>

            <div id="country-error-message" class="error-message">

              <p>Please select your country</p>

            </div>

          </div>

          <div class="city-container input">

            <%= f.input :city, label: 'City *', placeholder: 'Gand', input_html: { class: 'city-input' } %>

            <div id="city-error-message" class="error-message">

              <p>Please enter your city</p>

            </div>

          </div>

          <div class="button-edit-user">

            <% if current_user.settings == false %>

              <%= f.button :submit, 'Create my account', class:"button", id:"button-create-user" %>

            <% else %>

              <%= f.button :submit, 'Edit', class:"button", id:"button-create-user" %>

            <% end %>

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>
